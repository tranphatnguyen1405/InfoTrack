@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container">
        <form>
            <div class="form-group">
                <label for="searchPhrase">Search Phrase:</label>
                <input type="text" class="form-control" id="searchPhrase" name="searchPhrase" placeholder="search phrase">
            </div>
            <div class="form-group">
                <label for="url">Url:</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="url">
            </div>
            <button type="button" class="btn btn-primary" id="btnSearch">Search</button>
        </form>
        <br />
        <div class="row">
            <label id="lblResult"></label>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $("#btnSearch").click(function () {
                let searchParam = {
                    search: $("#searchPhrase").val(),
                    url: $("#url").val()
                };

                $.ajax({
                    method: "POST",
                    url: '@Url.Action("Search")',
                    data: JSON.stringify(searchParam),
                    dataType: "json",
                    contentType: "application/json",
                    success: function (data) {
                        if (data && data.message) {
                            $("#lblResult").text(data.message);
                        }
                        else {
                            $("#lblResult").text("data is null");
                        }
                    },
                    error: function (data) {
                        alert("Error while searching data");
                    }
                });
                return false;
            });
        });
    </script>
}